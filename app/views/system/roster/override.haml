#system-admin-roster-override
  %h1= title

  %a.pure-button.button{:href => r_back}
    %i.fa.fa-chevron-left= ""
    = t(:'back')

  .pure-g
    .pure-u-1.pure-u-md-1-2
      %form.pure-form.pure-form-stacked.form-wrapped.x-margin{:method => 'POST'}
        %input{:type => 'hidden', :name => '_csrf', :value => session[:csrf]}
        %input{:type => 'hidden', :name => 'delete', :value => '1'}

        %h1= t(:'system/roster/override/delete/section_title')
        %p= t(:'system/roster/override/delete/content')

        %button.pure-button.button.button-warning{:type => 'submit'}
          %i.fa.fa-times= ""
          = t(:'system/roster/override/delete/submit')

    .pure-u-1.pure-u-md-1-2
      %form.pure-form.pure-form-stacked.form-wrapped.x-margin{:method => 'POST'}
        %input{:type => 'hidden', :name => '_csrf', :value => session[:csrf]}

        %h1= t(:'system/roster/override/choose/section_title')
        %p= t(:'system/roster/override/choose/content')

        %label{:for => "choose_user"}= t(:'system/roster/override/choose/users')
        %select#choose_user{:name => 'user', :required => true}
          - users.each do |u|
            %option{:value => u.id, :selected => (!vre.nil?() && vre&.user_id == u.id)}
              = t(:'system/roster/override/choose/user_entry', :name => u.get_name.join(' '), :uid => u.id)

        %button.pure-button.button.button-primary{:type => 'submit'}
          %i.fa.fa-pencil= ""
          = t(:'system/roster/override/choose/submit')
