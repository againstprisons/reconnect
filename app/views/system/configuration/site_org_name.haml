.system-admin-configuration-site-org-name
  %h1= title

  %a.pure-button.button{:href => '/system/configuration'}
    %i.fa.fa-chevron-left
    = t :back

  %form.pure-form.pure-form-stacked.form-wrapped.y-margin-large{:method => 'POST'}
    %input{:type => 'hidden', :name => '_csrf', :value => session[:csrf]}

    %label{:for => 'site_name'}= t(:'system/configuration/site_org_name/site_name')
    %input#site_name{:type => 'text', :name => 'site_name', :value => site_name_cfgval, :required => true}

    %label{:for => 'org_name'}= t(:'system/configuration/site_org_name/org_name')
    %input#org_name{:type => 'text', :name => 'org_name', :value => org_name_cfgval, :required => true}

    %button.pure-button.button.button-primary{:type => 'submit'}
      %i.fa.fa-pencil
      = t(:save_changes)
