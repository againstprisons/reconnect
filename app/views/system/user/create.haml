.system-admin-user-create
  %h1= title

  %a.pure-button.button{:href => "/system/user"}
    %i.fa.fa-chevron-left
    = t(:'back')

  %form.pure-form.pure-form-stacked.form-wrapped{:method => "POST"}
    %input{:type => 'hidden', :name => '_csrf', :value => session[:csrf]}
    %h1= t(:'system/user/create/section_title')

    .pure-g
      .pure-u-1.pure-u-md-1-2
        .x-margin
          %label{:for => "edit_first_name"}= t(:'name/first')
          %input#edit_first_name{:type => 'text', :name => 'first_name', :required => true, :placeholder => t(:'name/first')}
      .pure-u-1.pure-u-md-1-2
        .x-margin
          %label{:for => "edit_last_name"}= t(:'name/last')
          %input#edit_last_name{:type => 'text', :name => 'last_name', :required => true, :placeholder => t(:'name/last')}

    %label{:for => "edit_email"}= t(:'email_address')
    %input#edit_email{:type => 'email', :name => 'email', :required => true, :placeholder => t(:'email_address')}

    %label{:for => "password_reset"}
      %input#password_reset{:type => 'checkbox', :name => 'password_reset', :checked => false}
      = t(:'system/user/create/send_reset')

    %button.pure-button.button.button-primary{:type => 'submit'}
      %i.fa.fa-user-plus
      = t(:'system/user/create/submit')
