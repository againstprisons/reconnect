.system-admin-container
  .pure-g
    .pure-u-1.pure-u-md-1-4
      .sidebar-menu.pure-menu
        %ul.pure-menu-list
          %li.pure-menu-item.sidebar-menu-item{:class => [("pure-menu-selected" if current?("/system"))].compact}
            %a.pure-menu-link.sidebar-menu-link{:href => '/system'}
              = t :'system/index/title'

          %li.pure-menu-item.sidebar-menu-item{:class => [("pure-menu-selected" if current_prefix?("/system/user"))].compact}
            %a.pure-menu-link.sidebar-menu-link{:href => '/system/user'}
              = t :'system/user/title'

          %li.pure-menu-item.sidebar-menu-item{:class => [("pure-menu-selected" if current_prefix?("/system/penpal"))].compact}
            %a.pure-menu-link.sidebar-menu-link{:href => '/system/penpal'}
              = t :'system/penpal/title'

          %li.pure-menu-item.sidebar-menu-item{:class => [("pure-menu-selected" if current_prefix?("/system/configuration"))].compact}
            %a.pure-menu-link.sidebar-menu-link{:href => '/system/configuration'}
              = t :'system/configuration/title'

          %li.pure-menu-item.sidebar-menu-item{:class => [("pure-menu-selected" if current_prefix?("/system/debugging"))].compact}
            %a.pure-menu-link.sidebar-menu-link{:href => '/system/debugging'}
              = t :'system/debugging/title'

    .pure-u-1.pure-u-md-3-4
      = yield
