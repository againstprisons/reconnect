.system-admin-debugging-files-delete
  %h1= title

  %a.pure-button.button{:href => "/system/files/#{file.file_id}"}
    %i.fa.fa-chevron-left
    = t :back

  %form.pure-form.pure-form-stacked.form-wrapped{:method => 'POST'}
    %input{:type => 'hidden', :name => '_csrf', :value => session[:csrf]}
    %h1= t(:'system/files/delete/section_title')

    %p= t(:'system/files/delete/content')

    %label{:for => "confirm"}
      %input{:name => 'confirm', :type => 'checkbox', :required => true}
      = t(:'system/files/delete/confirm_box')

    %label{:for => 'enter_yes'}= t(:'system/files/delete/enter_yes')
    %input#enter_yes{:name => 'enter_yes', :type => 'text', :required => true}

    %button.pure-button.button.button-error{:type => 'submit'}
      %i.fa.fa-trash
      = t(:'system/files/delete/submit')
