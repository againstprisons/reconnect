.system-admin-penpal-relationship-correspondence-view
  %h1= title

  %a.pure-button.button{:href => url("/system/penpal/relationship/#{relationship.id}/correspondence")}
    %i.fa.fa-chevron-left
    = t(:'back')

  .pure-g
    .pure-u-1.pure-u-md-1-2
      .form-wrapped.x-margin
        %h1= t(:'system/penpal/relationship/correspondence/view/section_title')

        %ul.block-list
          %li= t(:'system/penpal/relationship/correspondence/view/from', :name => correspondence_d[:sending_penpal_name])
          %li= t(:'system/penpal/relationship/correspondence/view/to', :name => correspondence_d[:receiving_penpal_name])
          %li= t(:'system/penpal/relationship/correspondence/view/uploaded', :date => correspondence_d[:creation])

          - if correspondence_d[:receiving_is_incarcerated]
            %li
              = t(:'system/penpal/relationship/correspondence/view/sent_to_inside_penpal')

              - if correspondence_d[:actioned]
                = t(:'system/penpal/relationship/correspondence/view/sent_to_inside_penpal/yes', :name => correspondence_d[:actioning_user_name])
              - else
                = t(:'system/penpal/relationship/correspondence/view/sent_to_inside_penpal/no')

    .pure-u-1.pure-u-md-1-2
      .form-wrapped.x-margin
        %h1= t(:'system/penpal/relationship/correspondence/view/actions')

        - if correspondence_d[:receiving_is_incarcerated] 
          - if correspondence_d[:actioned]
            %a.pure-button.button{:href => url("/system/penpal/relationship/#{relationship.id}/correspondence/#{correspondence.id}/mark")}
              %i.fa.fa-check
              = t(:'system/penpal/relationship/correspondence/view/actions/mark/unmark')
          - else
            %a.pure-button.button.button-success{:href => url("/system/penpal/relationship/#{relationship.id}/correspondence/#{correspondence.id}/mark")}
              %i.fa.fa-check
              = t(:'system/penpal/relationship/correspondence/view/actions/mark/mark')

        %a.pure-button.button.button-primary{:href => url("/system/penpal/relationship/#{relationship.id}/correspondence/#{correspondence.id}/download")}
          %i.fa.fa-download
          = t(:'system/penpal/relationship/correspondence/view/actions/download')

        %a.pure-button.button.button-error{:href => url("/system/penpal/relationship/#{relationship.id}/correspondence/#{correspondence.id}/delete")}
          %i.fa.fa-trash
          = t(:'system/penpal/relationship/correspondence/view/actions/delete')
