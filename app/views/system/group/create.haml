.system-admin-group-create
  %h1= title

  %a.pure-button.button{:href => url("/system/group")}
    %i.fa.fa-chevron-left= ""
    = t(:'back')

  %form.pure-form.pure-form-stacked.form-wrapped{:method => 'POST'}
    %input{:type => 'hidden', :name => '_csrf', :value => session[:csrf]}
    %h1= t(:'system/group/create/section_title')

    %label{:for => 'group_name_role'}= t(:'system/group/create/group_name_label')
    %input#group_name_role{:type => 'text', :name => 'name', :required => true}

    %label{:for => 'edit_2fa'}
      %input{:type => 'checkbox', :name => '2fa'}
      = t(:'system/group/create/require_2fa_label')

    %button.pure-button.button.button-success{:type => 'submit'}
      %i.fa.fa-plus= ""
      = t(:'system/group/create/submit')

