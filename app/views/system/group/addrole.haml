.system-admin-group-add-role
  %h1= title

  %a.pure-button.button{:href => url("/system/group/#{group[:id]}")}
    %i.fa.fa-chevron-left= ""
    = t(:'back')

  %form.pure-form.pure-form-stacked.form-wrapped{:method => 'POST'}
    %input{:type => 'hidden', :name => '_csrf', :value => session[:csrf]}
    %h1= t(:'system/group/edit/roles/add/section_title')

    %label{:for => 'edit_role'}= t(:'system/group/edit/roles/add/role_label')
    %input#edit_role{:type => 'text', :name => 'role', :required => true}

    %button.pure-button.button.button-success{:type => 'submit'}
      %i.fa.fa-plus= ""
      = t(:'system/group/edit/roles/add/submit')

