.system-admin-group-delete
  %h1= title

  %a.pure-button.button{:href => url("/system/group/#{group[:id]}")}
    %i.fa.fa-chevron-left= ""
    = t(:'back')

  %form.pure-form.pure-form-stacked.form-wrapped{:method => 'POST'}
    %input{:type => 'hidden', :name => '_csrf', :value => session[:csrf]}
    %h1= t(:'system/group/delete/section_title')

    %p
      = t(:'system/group/delete/content',
        :group_name => group[:name],
        :members => group[:members].count,
        :roles => group[:roles].count)

    %label{:for => 'group_name'}= t(:'system/group/delete/group_name_label')
    %input#group_name{:type => 'text', :name => 'name', :required => true}

    %button.pure-button.button.button-error{:type => 'submit'}
      %i.fa.fa-trash= ""
      = t(:'system/group/delete/submit')

